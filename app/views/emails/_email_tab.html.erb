<style type="text/css">
  table {
    margin:auto;
  }
  table,
  td {
    border: 1px solid #333;
  }

  thead,
  tfoot {
    background-color: #333;
    color: #fff;
  }
</style>

<%= link_to(
      content_tag(
        :i,
        " Recevoir un email",
        class: 'fa fa-envelope-open-text'
      ),
      emails_path,
      method: :post,
      class: "btn btn-info",
      remote: true
    )
%>
<div class="container">
  <% if !notice.nil? %>
    <div class="alert alert-success" role="alert">
      <p id="notice"><%= notice %></p>
    </div>
  <% end %>
  <table>
    <caption>Liste de tous les emails reçus</caption>
    <thead>
      <tr>
        <th>Liste des emails</th>
        <th>Email sélectionné</th>
      </tr>
    </thead>
    <tbody>
      <% @emails.each do |email| %>
        <tr>
          <td id="email_<%= email.id %>"><%= link_to "#{email.object}", email_path(email.id), remote: true %></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
